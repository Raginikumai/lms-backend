// prisma/models/submission.prisma

model Submission {
  id          String    @id @default(uuid()) @map("id") // uuid PRIMARY KEY

  // Foreign key for student_id
  studentId   String    @map("student_id") // uuid NOT NULL
  // Relation to the User model (student)
  student     User      @relation(fields: [studentId], references: [id])

  // Foreign key for question_id
  questionId  String    @map("question_id") // uuid NOT NULL
  // Relation to the Question model
  question    Question  @relation(fields: [questionId], references: [id])

  // Foreign key for option_id
  optionId    String    @map("option_id") // uuid NOT NULL
  // Relation to the Option model
  option      Option    @relation(fields: [optionId], references: [id])

  score       Int?      // integer (nullable)
  createdAt   DateTime  @default(now()) @map("created_at") // timestamp
  updatedAt   DateTime  @updatedAt @map("updated_at") // timestamp

  @@map("submissions")
}